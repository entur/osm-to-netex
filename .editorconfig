# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_size = 4

# Markdown uses 4 spaces and indents by spec, trailing whitespace is required for some formatting to work properly such
# as tables
[*.{md,txt}]
indent_size = 4
trim_trailing_whitespace = false
